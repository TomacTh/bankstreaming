       <div class="ui fixed  inverted menu stackable">
        <a class="item header" href="/">
          <i class="home icon"></i>
          Home
        </a>
        <a class="item" href="/movies">
          <i class="video  icon"></i>
          Movies
        </a>   
        <a class="item" href="/contact">
          <i class="envelope icon"></i>
          Contact
        </a>  
        <% if(currentUser && currentUser.admin) { %>
        <a class="item" href="/movies/new">
          <i class="add  icon"></i>
          Add
        </a>
        <% } %>
        <div class="right menu">
          <% if(!currentUser){ %>
            <a  href="/register" class="ui item">
              Sign up
            </a> 
            <a href="/login" class="ui item">
              Login
            </a> 
            <% } else { %>
            <a class="ui item">
              <%=currentUser.username%>
            </a> 
            <a href="/logout" class="ui item">
              Logout
            </a>
         
            <% } %>
            <div class="item">
              <form action="/movies" method="GET">
                  <div class="ui icon input">
                      <input name="search" type="text" placeholder="Search...">
                      <i class="search link icon" value="Search" type="submit"></i>
                    </div>
    
              </form>
            </div>
            
         
        </div>
        <div class="hamburger ">
            <span class="hamburger-bun"></span>
            <span class="hamburger-patty"></span>
            <span class="hamburger-bun"></span>
        </div>
      </div>
      
      <div id= "flash" class="container">
        <% if(error&& error.length>0) {%>
          <div  id="message" class="ui red message">
            <%=error%>
          </div>
        <% } %>
        <% if(success&& success.length>0) {%>
          <div class="ui green message">
            <%=success%>
          </div>
        <% } %>
      </div>

